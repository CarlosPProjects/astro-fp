---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="Welcome to Astro.">
  <main class="text-primary">
    <section class="hero flex flex-col">
      <div class="container pt-8">
        <Header />
      </div>
      <div class="container flex-1 flex flex-col-reverse md:flex-row">
        <div
          class="hidden sm:flex flex-0 md:flex-1 items-end justify-start pb-14"
        >
          <span class="writing-mode-lr font-kanit uppercase tracking-widest"
            >swipe down</span
          >
        </div>
        <div class="flex-1 flex flex-col justify-center gap-4">
          <h2 class="font-kanit text-4xl">We design your room aesthetic</h2>
          <p class="text-start max-w-md">
            Lorem ipsum, dolor sit amet consectetur adipisicing elit. Alias sunt
            laborum assumenda consequatur ratione.
          </p>
        </div>
      </div>
    </section>

    <style>
      .hero {
        background-image: url("./images/bg-hero.webp");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        height: 689px;
      }
      .writing-mode-lr {
        writing-mode: vertical-lr;
        transform: rotate(180deg);
      }
      @media (max-width: 768px) {
        .hero {
          height: 600px;
        }
      }
    </style>
  </main>
</Layout>
